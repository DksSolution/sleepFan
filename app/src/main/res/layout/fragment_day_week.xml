<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/main_activity_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/transparentWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/ivPrev"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:src="@drawable/prev_date_icon"/>

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Apr 18 - 19, 2024"/>

                        <ImageView
                            android:id="@+id/ivNext"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="3dp"
                            android:layout_weight="1.5"
                            android:src="@drawable/next_date_icon"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/bpm_heart_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50"
                            android:textSize="18sp"
                            android:layout_marginEnd="3dp"
                            android:textColor="#cf82f7"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18sp"
                            android:layout_marginEnd="3dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70"
                            android:textSize="18sp"
                            android:textColor="#cf82f7"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BPM"
                            android:textSize="12sp"
                            android:textColor="@color/subTxtColor"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/time_in_bed"/>

                        <TextView
                            android:id="@+id/a1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/subTxtColor"
                            android:text="AVG. TIME IN BED"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/time_in_bed"/>

                        <TextView
                            android:id="@+id/a2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/subTxtColor"
                            android:text="TIME ASLEEP"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginHorizontal="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/tvTimeInBedHr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="6"
                            android:textColor="@color/white"
                            android:textSize="28sp" />

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/subTxtColor"
                            android:text="hr"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvTimeInBedMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:textSize="28sp"
                            android:textColor="@color/white"
                            android:text="23"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/subTxtColor"
                            android:text="min"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTimeAsleepBedHr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="28sp"
                            android:textColor="@color/white"
                            android:text="6"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:text="hr"
                            android:textColor="@color/subTxtColor"
                            android:textSize="14sp" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvTimeAsleepBedMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:textSize="28sp"
                            android:textColor="@color/white"
                            android:text="23"/>

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/subTxtColor"
                            android:text="min"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/subTxtColor"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="5"
                        android:layout_weight="1.9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvPrevDateMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apr 19"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/tvPrevTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=", 12:00AM"
                                android:textSize="12sp"
                                android:textColor="@color/subTxtColor"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - "
                                android:textSize="18sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/tvNextDateMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Apr 19"
                                android:textSize="18sp"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/tvNextTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=", 8:00AM"
                                android:textSize="12sp"
                                android:textColor="@color/subTxtColor"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llAwake"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/round_awake"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="5"
                                android:textColor="@color/subTxtColor"
                                android:textSize="16sp"
                                android:text="AWAKE :"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="end"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tvAwakeHr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="22sp"
                                    android:textColor="@color/white"
                                    android:text="6"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="hr"/>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tvAwakeMin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="22sp"
                                    android:textColor="@color/white"
                                    android:text="23"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="min"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llREM"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/round_rem"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="5"
                                android:textColor="@color/subTxtColor"
                                android:textSize="16sp"
                                android:text="REM SLEEP :"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="end"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvRemHr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="6"
                                    android:textColor="@color/white"
                                    android:textSize="22sp" />

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="hr"/>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tvRemMin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="22sp"
                                    android:textColor="@color/white"
                                    android:text="23"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="min"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llCore"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/round_core"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="5"
                                android:textColor="@color/subTxtColor"
                                android:textSize="16sp"
                                android:text="CORE SLEEP :"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="end"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tvCoreHr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="22sp"
                                    android:textColor="@color/white"
                                    android:text="6"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="hr"/>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tvCoreMin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="22sp"
                                    android:textColor="@color/white"
                                    android:text="23"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="min"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llDeep"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/round_deep"/>

                            <TextView
                                android:id="@+id/aa"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="5"
                                android:textColor="@color/subTxtColor"
                                android:textSize="16sp"
                                android:text="DEEP SLEEP :"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="end"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvDeepHr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="6"
                                    android:textColor="@color/white"
                                    android:textSize="22sp" />

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="hr"/>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tvDeepMin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="22sp"
                                    android:textColor="@color/white"
                                    android:text="23"/>

                                <TextView
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:textColor="@color/subTxtColor"
                                    android:text="min"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ProgressBar
                                android:id="@+id/progressBackground"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:indeterminate="false"
                                android:padding="0dp"
                                android:layout_margin="0dp"
                                android:progressDrawable="@drawable/round_progress_bar_bg"
                                android:max="100"
                                android:progress="100"/>

                            <ProgressBar
                                android:id="@+id/progressForeground"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="0dp"
                                android:layout_margin="0dp"
                                android:indeterminate="false"
                                android:progressDrawable="@drawable/round_progress_bar"
                                android:max="100"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_centerInParent="true">
                                <TextView
                                    android:id="@+id/tvProgressPercent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="72%"
                                    android:textSize="24dp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/tvProgressTimeASleep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="6 hr 26 min"
                                    android:textSize="16dp"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="see detail"
                                    android:textSize="12dp"
                                    android:textColor="@color/white"/>
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/see_detail_down_arrow"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5"
            app:cardCornerRadius="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/transparentWhite">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
